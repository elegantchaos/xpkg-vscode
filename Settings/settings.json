{
  // ----------------------
  // Editor
  // ----------------------
  "editor.minimap.enabled": false,
  "editor.fontLigatures": true,
  "editor.fontFamily": "'JetBrains Mono', 'Fira Code', Iconsolata, Menlo, Monaco, 'Courier New', monospace",
  "editor.indentSize": "tabSize",
  "editor.tabSize": 2,
  "editor.fontSize": 13,
  "editor.fontWeight": "500",
  "editor.lineHeight": 1.4,
  "editor.lineNumbers": "off",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.dragAndDrop": false,
  "editor.inlineSuggest.enabled": true,
  "editor.find.globalFindClipboard": true,
  "editor.find.seedSearchStringFromSelection": "selection",
  "search.mode": "view",
  "search.globalFindClipboard": true,
  "editor.guides.bracketPairs": false,
  "editor.guides.bracketPairsHorizontal": false,
  "editor.guides.indentation": false,
  //
  // ----------------------
  // Explorer
  // ----------------------
  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "pubspec.yaml": "pubspec.lock,pubspec_overrides.yaml,.packages,.flutter-plugins,.flutter-plugins-dependencies,.metadata",
    "*.dart": "${capture}.g.dart",
    "*.ts": "${capture}.typegen.ts",
    "*.tsx": "${capture}.typegen.ts",
    "*.mts": "${capture}.typegen.ts",
    "*.cts": "${capture}.typegen.ts"
  },
  "explorer.confirmDelete": false,
  //
  // ----------------------
  // Workbench
  // ----------------------
  "workbench.startupEditor": "none",
  "workbench.editor.openPositioning": "last",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.revealIfOpen": true,
  "workbench.editor.sharedViewState": true,
  "workbench.sideBar.location": "right",
  "workbench.colorTheme": "Default Light Modern",
  "workbench.iconTheme": "vscode-icons",
  //
  // ----------------------
  // Git
  // ----------------------
  "git.confirmSync": false,
  "git.closeDiffOnOperation": true,
  "git.autofetch": true,
  "git.suggestSmartCommit": false,
  "git.autoStash": true,
  "git.enableSmartCommit": true,
  "git.inputValidation": "off",
  "git.mergeEditor": true,
  "git.pruneOnFetch": true,
  "git.fetchOnPull": true,
  "git.postCommitCommand": "sync",
  "git.openRepositoryInParentFolders": "never",
  "git.ignoreRebaseWarning": true,
  //
  // ----------------------
  // Github
  // ----------------------
  "githubIssues.issueCompletions.enabled": false,
  "githubIssues.userCompletions.enabled": false,
  "githubPullRequests.defaultCreateOption": "createDraft",
  "githubPullRequests.createOnPublishBranch": "never",
  "githubPullRequests.pushBranch": "always",
  "githubPullRequests.pullBranch": "never",
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": false,
    "scminput": false
  },
  //
  // ----------------------
  // GitLens
  // ----------------------
  "gitlens.terminalLinks.enabled": false,
  //
  // ----------------------
  // Dart
  // ----------------------
  "dart.openDevTools": "flutter",
  "dart.debugExternalPackageLibraries": true,
  "dart.debugSdkLibraries": true,
  "dart.renameFilesWithClasses": "prompt",
  "dart.showInspectorNotificationsForWidgetErrors": false,
  "dart.checkForSdkUpdates": false,
  "dart.promptToGetPackages": false,
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },
  //
  // ----------------------
  // Jira
  // ----------------------
  "atlascode.jira.startWorkBranchTemplate.customPrefixes": [],
  "atlascode.jira.explorer.monitorEnabled": false,
  "atlascode.jira.startWorkBranchTemplate.customTemplate": "issues/{{{issueKey}}}-{{{summary}}}",
  "atlascode.bitbucket.enabled": false,
  "atlascode.jira.lastCreateSiteAndProject": {
    "siteId": "028c6563-89de-48ca-becd-da2bfefd5509",
    "projectKey": "TEC"
  },
  //
  // ----------------------
  // LLDB
  // ----------------------
  "lldb.library": "${userHome}/.local/share/current-xcode/../SharedFrameworks/LLDB.framework/Versions/A/LLDB",
  "lldb.launch.expressions": "native",
  //
  // ----------------------
  // Go
  // ----------------------
  "go.survey.prompt": false,
  "go.toolsManagement.checkForUpdates": "off",
  //
  // ----------------------
  // Other
  // ----------------------
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "window.restoreFullscreen": true,
  "yaml.schemas": {
    "file:///Users/sam/.vscode/extensions/atlassian.atlascode-3.0.4/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
  },
  "redhat.telemetry.enabled": false,
  "[python]": {
    "editor.formatOnType": true
  },
  "apiLinter.configDir": "${workspaceFolder}/",
  "vsicons.dontShowNewVersionMessage": true,
  "terminal.integrated.scrollback": 10000,
  "debug.onTaskErrors": "showErrors",
  "debug.toolBarLocation": "hidden",
  "window.zoomLevel": -1,
}